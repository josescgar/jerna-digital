---
import { getTranslations } from '@/i18n/translations';

const t = getTranslations();
---

<section class="section relative overflow-hidden">
  <div class="container">
    <div
      class="border-border bg-background-elevated relative overflow-hidden rounded-3xl border p-8 md:p-12 lg:p-16"
    >
      <!-- Content -->
      <div class="relative z-10 mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl">
          Ready to <span class="text-gradient">transform</span> your engineering organization?
        </h2>
        <p class="text-foreground-muted mt-6 text-lg">
          Let's discuss how I can help you build exceptional engineering teams
          and products. No commitment, just a conversation.
        </p>
        <div
          class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row"
        >
          <a
            href="/contact"
            class="bg-gradient-primary text-primary-foreground hover:shadow-glow inline-flex h-12 w-full items-center justify-center gap-2 rounded-lg px-8 text-base font-medium transition-all hover:scale-[1.02] sm:w-auto"
          >
            {t.hero.cta}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="/services"
            class="border-border text-foreground hover:border-border-subtle hover:bg-background-subtle inline-flex h-12 w-full items-center justify-center gap-2 rounded-lg border bg-transparent px-8 text-base font-medium transition-all sm:w-auto"
          >
            {t.hero.secondaryCta}
          </a>
        </div>
      </div>

      <!-- Background gradient effects -->
      <div
        class="pointer-events-none absolute inset-0 -z-10"
        aria-hidden="true"
      >
        <div
          class="from-primary/20 absolute -top-1/4 -left-1/4 h-96 w-96 rounded-full bg-gradient-to-br to-transparent blur-[80px]"
        >
        </div>
        <div
          class="from-secondary/20 absolute -right-1/4 -bottom-1/4 h-96 w-96 rounded-full bg-gradient-to-tl to-transparent blur-[80px]"
        >
        </div>
      </div>
    </div>
  </div>
</section>
