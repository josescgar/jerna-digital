---
import {
  getTranslations,
  defaultLanguage,
  type Language,
} from '@/features/i18n/i18n.translations';
import { getLocalizedPath } from '@/features/i18n/i18n.utils';
import { Route } from '@/features/common/routes.utils';

interface Props {
  lang?: Language;
}

const lang = Astro.props.lang ?? defaultLanguage;
const t = getTranslations(lang);

const contactHref = getLocalizedPath(lang, Route.Contact);
const servicesHref = getLocalizedPath(lang, Route.Services);
---

<section class="section relative overflow-hidden">
  <div class="relative z-10 container">
    <div class="mx-auto max-w-3xl text-center">
      <!-- Availability badge with animated ping dot -->
      <div class="animate-fade-in-up mb-8">
        <span
          class="bg-primary/10 text-primary inline-flex items-center gap-2 rounded-full px-5 py-2 text-sm font-medium"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="bg-primary absolute inline-flex h-full w-full animate-ping rounded-full opacity-75"
            ></span>
            <span class="bg-primary relative inline-flex h-2 w-2 rounded-full"
            ></span>
          </span>
          {t.hero.availableForProjects}
        </span>
      </div>

      <!-- Main heading -->
      <h1
        class="animate-fade-in-up text-4xl leading-tight font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl"
        style="animation-delay: 0.1s;"
      >
        <span class="text-foreground">{t.hero.greeting} </span>
        <span class="text-gradient">{t.hero.name}</span>
        <span class="text-primary inline-block animate-bounce">.</span>
      </h1>

      <!-- Subtitle -->
      <p
        class="animate-fade-in-up text-foreground-muted mx-auto mt-8 max-w-xl text-lg leading-relaxed sm:text-xl"
        style="animation-delay: 0.2s;"
      >
        {t.hero.title}
      </p>

      <!-- Description -->
      <p
        class="animate-fade-in-up text-foreground-subtle mx-auto mt-4 max-w-2xl text-base"
        style="animation-delay: 0.3s;"
      >
        {t.hero.subtitle}
        {' '}
        {t.hero.referencesPrefix}{' '}
        <a
          href="https://dora.dev/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-foreground hover:text-primary underline underline-offset-4"
        >
          {t.hero.referenceDora}</a
        >{t.hero.referencesSeparator}{' '}
        <a
          href="https://owasp.org/www-project-top-ten/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-foreground hover:text-primary underline underline-offset-4"
        >
          {t.hero.referenceOwasp}</a
        >{t.hero.referencesBeforeLast}{' '}
        <a
          href="https://developers.openai.com/codex/guides/build-ai-native-engineering-team"
          target="_blank"
          rel="noopener noreferrer"
          class="text-foreground hover:text-primary underline underline-offset-4"
        >
          {t.hero.referenceAgents}</a
        >.
      </p>

      <!-- CTAs -->
      <div
        class="animate-fade-in-up mt-12 flex flex-col items-center justify-center gap-4 sm:flex-row"
        style="animation-delay: 0.4s;"
      >
        <a
          href={contactHref}
          class="border-primary text-primary hover:bg-primary hover:text-primary-foreground inline-flex h-12 w-full items-center justify-center gap-2 rounded-lg border-2 px-8 text-base font-medium transition-all sm:w-auto"
        >
          {t.hero.cta}
        </a>
        <a
          href={servicesHref}
          class="text-foreground-muted hover:text-foreground inline-flex h-12 w-full items-center justify-center gap-2 px-8 text-base font-medium underline underline-offset-4 transition-all sm:w-auto"
        >
          {t.hero.secondaryCta}
        </a>
      </div>

      <!-- Trust indicators -->
      <div
        class="animate-fade-in-up text-foreground-subtle mt-20 flex flex-wrap items-center justify-center gap-4 text-sm"
        style="animation-delay: 0.5s;"
      >
        <span>{t.hero.experience}</span>
        <span class="text-foreground-subtle/40">&middot;</span>
        <span>{t.hero.startupsScaleups}</span>
        <span class="text-foreground-subtle/40">&middot;</span>
        <span>{t.hero.remoteFirst}</span>
      </div>
    </div>
  </div>
</section>
