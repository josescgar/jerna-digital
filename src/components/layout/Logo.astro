---
import logoLight from '@/assets/logo/logo-white-transparent.png';
import logoDark from '@/assets/logo/logo-dark-transparent.png';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['flex items-center gap-2', className]}>
  <!-- Light mode logo (black text) -->
  <img
    src={logoLight.src}
    alt="Jerna Digital"
    width={logoLight.width}
    height={logoLight.height}
    class="logo-light hidden h-9 w-auto"
  />
  <!-- Dark mode logo (white text) â€” shown by default -->
  <img
    src={logoDark.src}
    alt="Jerna Digital"
    width={logoDark.width}
    height={logoDark.height}
    class="logo-dark h-9 w-auto"
  />
</div>

<style is:global>
  /* Dark mode (default): show the dark variant (white text) */
  .logo-dark {
    display: block;
    filter: drop-shadow(0 0 1px rgba(255, 255, 255, 0.4));
  }
  .logo-light {
    display: none;
  }

  /* Light mode: show the light variant (black text), hide dark */
  [data-theme='light'] .logo-light {
    display: block;
  }
  [data-theme='light'] .logo-dark {
    display: none;
  }
</style>
