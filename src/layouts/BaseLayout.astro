---
import {
  getTranslations,
  languages,
  localeMetadata,
  defaultLanguage,
  type Language,
} from '@/i18n/translations';
import { getAlternateUrls } from '@/i18n/utils';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import '@/styles/global.css';

interface Props {
  lang?: Language;
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  noIndex?: boolean;
}

const lang = Astro.props.lang ?? defaultLanguage;
const t = getTranslations(lang);
const { locale } = localeMetadata[lang];

const {
  title = t.site.name,
  description = t.site.description,
  image = '/og-image.png',
  canonicalUrl = Astro.url.href,
  noIndex = false,
} = Astro.props;

const fullTitle = title === t.site.name ? title : `${title} | ${t.site.name}`;
const siteUrl = Astro.site ?? new URL('https://jerna.digital');
const ogImageUrl = new URL(image, siteUrl).href;

// Get alternate URLs for hreflang tags
const alternateUrls = getAlternateUrls(Astro.url.pathname, siteUrl);
---

<!doctype html>
<html lang={lang} class="no-transitions scroll-smooth">
  <head>
    <!-- Language negotiation for unprefixed URLs (static hosting) -->
    <script
      is:inline
      define:vars={{
        supportedLanguages: Object.keys(languages),
        defaultLang: defaultLanguage,
      }}
    >
      (function () {
        try {
          var supported = supportedLanguages;
          var storageKey = 'jerna-lang';

          var pathname = window.location.pathname || '/';
          var firstSegment = (pathname.split('/')[1] || '').toLowerCase();

          // If URL already includes an explicit language prefix, do not redirect.
          if (firstSegment && supported.indexOf(firstSegment) !== -1) {
            return;
          }

          var stored = null;
          try {
            stored = localStorage.getItem(storageKey);
          } catch (e) {
            stored = null;
          }

          var preferred = null;
          if (stored && supported.indexOf(stored) !== -1) {
            preferred = stored;
          }

          if (!preferred) {
            var navLangs =
              (navigator.languages && navigator.languages.length
                ? navigator.languages
                : [navigator.language]) || [];

            for (var i = 0; i < navLangs.length; i++) {
              var raw = String(navLangs[i] || '');
              if (!raw) continue;
              var code = raw.split('-')[0].toLowerCase();
              if (code && supported.indexOf(code) !== -1) {
                preferred = code;
                break;
              }
            }
          }

          if (!preferred) preferred = defaultLang;

          // Persist browser-derived preference so future visits are consistent.
          if (!stored && preferred && supported.indexOf(preferred) !== -1) {
            try {
              localStorage.setItem(storageKey, preferred);
            } catch (e) {
              // ignore
            }
          }

          if (preferred && preferred !== defaultLang) {
            var search = window.location.search || '';
            var hash = window.location.hash || '';
            var target =
              '/' +
              preferred +
              (pathname === '/' ? '' : pathname) +
              search +
              hash;
            window.location.replace(target);
          }
        } catch (e) {
          // ignore
        }
      })();
    </script>

    <!-- Theme initialization - must run before any render to prevent FOUC -->
    <script is:inline>
      (function () {
        var stored = localStorage.getItem('jerna-theme');
        var system = window.matchMedia('(prefers-color-scheme: light)').matches
          ? 'light'
          : 'dark';
        var theme = stored === 'light' || stored === 'dark' ? stored : system;
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Robots -->
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content={t.site.name} />
    <meta property="og:locale" content={locale} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- hreflang tags for language alternatives -->
    {
      alternateUrls.map(({ hreflang, url }) => (
        <link rel="alternate" hreflang={hreflang} href={url} />
      ))
    }
    <link
      rel="alternate"
      hreflang="x-default"
      href={alternateUrls.find((a) => a.lang === defaultLanguage)?.url}
    />

    <!-- Fonts - Inter & DM Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@500;600;700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Security Headers (meta tags for static site) -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0a0a0b" />

    <!-- JSON-LD Structured Data -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'ProfessionalService',
        name: t.site.name,
        description: t.site.description,
        url: siteUrl.href,
        logo: new URL('/logo.png', siteUrl).href,
        founder: {
          '@type': 'Person',
          name: 'Jose Escobar',
          jobTitle: 'Fractional CTO & Technical Consultant',
        },
        areaServed: {
          '@type': 'GeoCircle',
          name: 'Global',
        },
        serviceType: [
          'Technical Consulting',
          'Engineering Management',
          'Fractional CTO',
          'AI-Augmented Development',
        ],
      })}
    />
  </head>
  <body
    class="bg-background text-foreground flex min-h-screen flex-col antialiased"
  >
    <!-- Skip to main content link for accessibility -->
    <a
      href="#main-content"
      class="focus:bg-primary focus:text-primary-foreground sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:rounded-lg focus:px-4 focus:py-2"
    >
      Skip to main content
    </a>

    <Header lang={lang} />

    <main id="main-content" class="flex-1 pt-16 md:pt-20">
      <slot />
    </main>

    <Footer lang={lang} />

    <!-- Ambient background effects -->
    <div
      class="pointer-events-none fixed inset-0 -z-10 overflow-hidden"
      aria-hidden="true"
    >
      <!-- Large gradient orb - top right -->
      <div
        class="animate-pulse-glow from-primary/20 via-secondary/10 absolute -top-1/4 -right-1/4 h-[600px] w-[600px] rounded-full bg-gradient-to-br to-transparent blur-[100px]"
      >
      </div>
      <!-- Secondary orb - bottom left -->
      <div
        class="animate-pulse-glow from-secondary/15 via-primary/5 absolute -bottom-1/4 -left-1/4 h-[500px] w-[500px] rounded-full bg-gradient-to-tr to-transparent blur-[100px]"
        style="animation-delay: 2s;"
      >
      </div>
      <!-- Subtle grid pattern -->
      <div
        class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:64px_64px]"
      >
      </div>
    </div>

    <!-- Enable transitions after initial render to prevent FOUC -->
    <script is:inline>
      requestAnimationFrame(function () {
        document.documentElement.classList.remove('no-transitions');
      });
    </script>
  </body>
</html>
