---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CTASection from '@/components/sections/CTASection.astro';
import {
  getTranslations,
  languages,
  defaultLanguage,
  type Language,
} from '@/i18n/translations';
import { getLocalizedPath } from '@/i18n/utils';

export function getStaticPaths() {
  return (Object.keys(languages) as Language[]).map((lang) => {
    return {
      params: { lang: lang === defaultLanguage ? undefined : lang },
      props: { lang },
    };
  });
}

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

interface PortfolioItem {
  slug: string;
  title: string;
  client: string;
  industry: string;
  summary: string;
  tags: string[];
  comingSoon: boolean;
}

const portfolioItems: PortfolioItem[] = [
  {
    slug: 'ai-augmented-mvp-delivery',
    title: 'AI-Augmented MVP Delivery in 8 Weeks',
    client: 'Pre-Seed SaaS Startup',
    industry: 'B2B SaaS',
    summary:
      'Set up AI-augmented development workflows for a two-person founding team, enabling them to ship a production-ready MVP in half the typical timeline.',
    tags: ['AI Workflows', 'Technical Consulting', 'MVP'],
    comingSoon: true,
  },
  {
    slug: 'seed-to-series-a-engineering',
    title: 'Building the Engineering Org from Seed to Series A',
    client: 'Seed-Stage Marketplace',
    industry: 'Marketplace',
    summary:
      'Joined as Fractional CTO to hire the first 5 engineers, establish engineering culture, and prepare the technical narrative for Series A fundraising.',
    tags: ['Fractional CTO', 'Team Building', 'Fundraising'],
    comingSoon: true,
  },
  {
    slug: 'legacy-architecture-audit',
    title: 'Technical Audit Before Series A',
    client: 'Series A Fintech',
    industry: 'FinTech',
    summary:
      "Conducted a comprehensive architecture audit and technical debt assessment that became the foundation of the company's engineering roadmap for investors.",
    tags: ['Architecture Audit', 'Technical Debt', 'Due Diligence'],
    comingSoon: true,
  },
];
---

<BaseLayout
  lang={lang}
  title={t.portfolio.title}
  description={t.portfolio.subtitle}
>
  <!-- Hero section -->
  <section class="section relative overflow-hidden">
    <div class="container">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
          <span class="text-gradient">{t.portfolio.title}</span>
        </h1>
        <p class="text-foreground-muted mt-6 text-xl">
          {t.portfolio.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Portfolio grid -->
  <section class="section pt-0">
    <div class="container">
      <div class="grid gap-8 lg:grid-cols-3">
        {
          portfolioItems.map((item) => (
            <article class="group border-border bg-background-elevated duration-normal hover:border-border-subtle relative overflow-hidden rounded-2xl border transition-all hover:shadow-lg">
              {/* Image placeholder */}
              <div class="bg-background-subtle aspect-video">
                <div class="flex h-full items-center justify-center">
                  <div class="bg-gradient-primary/20 text-primary flex h-16 w-16 items-center justify-center rounded-2xl">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="32"
                      height="32"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" />
                      <polyline points="3.27 6.96 12 12.01 20.73 6.96" />
                      <line x1="12" y1="22.08" x2="12" y2="12" />
                    </svg>
                  </div>
                </div>
              </div>

              {/* Content */}
              <div class="p-6">
                {/* Tags */}
                <div class="mb-3 flex flex-wrap gap-2">
                  {item.tags.slice(0, 2).map((tag) => (
                    <span class="bg-background-subtle text-foreground-subtle rounded-full px-2 py-1 text-xs">
                      {tag}
                    </span>
                  ))}
                </div>

                <h2 class="group-hover:text-primary text-xl font-semibold tracking-tight transition-colors">
                  {item.title}
                </h2>

                <p class="text-foreground-subtle mt-2 text-sm">
                  {item.client} &bull; {item.industry}
                </p>

                <p class="text-foreground-muted mt-4">{item.summary}</p>

                {item.comingSoon ? (
                  <div class="text-foreground-subtle mt-6 flex items-center gap-2 text-sm">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <circle cx="12" cy="12" r="10" />
                      <polyline points="12 6 12 12 16 14" />
                    </svg>
                    Coming soon
                  </div>
                ) : (
                  <a
                    href={getLocalizedPath(lang, `/portfolio/${item.slug}`)}
                    class="text-primary hover:text-primary-light mt-6 inline-flex items-center gap-2 text-sm font-medium transition-colors"
                  >
                    {t.portfolio.viewCase}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M5 12h14" />
                      <path d="m12 5 7 7-7 7" />
                    </svg>
                  </a>
                )}
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <CTASection lang={lang} />
</BaseLayout>
