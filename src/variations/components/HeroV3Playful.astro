---
/**
 * V3: Playful Hero — Energetic, Approachable
 * Asymmetric layout, decorative blob, pixel scatter, pill-shaped CTAs
 */
import {
  getTranslations,
  defaultLanguage,
  type Language,
} from '@/i18n/translations';
import { getLocalizedPath } from '@/i18n/utils';

interface Props {
  lang?: Language;
}

const lang = Astro.props.lang ?? defaultLanguage;
const t = getTranslations(lang);

const contactHref = getLocalizedPath(lang, '/contact');
const servicesHref = getLocalizedPath(lang, '/services');
---

<section class="section relative overflow-hidden">
  <div class="relative z-10 container">
    <div class="mx-auto max-w-4xl">
      <!-- Offset greeting badge with playful styling -->
      <div class="animate-fade-in-up mb-6 sm:ml-8">
        <span
          class="bg-primary/10 text-primary inline-flex items-center gap-2 rounded-full px-5 py-2 text-sm font-medium"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="bg-primary absolute inline-flex h-full w-full animate-ping rounded-full opacity-75"
            ></span>
            <span class="bg-primary relative inline-flex h-2 w-2 rounded-full"
            ></span>
          </span>
          {t.hero.availableForProjects}
        </span>
      </div>

      <!-- Main heading — slightly offset for asymmetry -->
      <h1
        class="animate-fade-in-up text-4xl leading-tight font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl"
        style="animation-delay: 0.1s;"
      >
        <span class="text-foreground">{t.hero.greeting} </span>
        <span class="text-gradient">{t.hero.name}</span>
        <span class="text-secondary inline-block animate-bounce">.</span>
      </h1>

      <!-- Subtitle — offset right for playful asymmetry -->
      <p
        class="animate-fade-in-up text-foreground-muted mt-6 max-w-2xl text-lg sm:ml-12 sm:text-xl"
        style="animation-delay: 0.2s;"
      >
        {t.hero.title}
      </p>

      <!-- Description -->
      <p
        class="animate-fade-in-up text-foreground-subtle mt-4 max-w-xl text-base sm:ml-12"
        style="animation-delay: 0.3s;"
      >
        {t.hero.subtitle}
      </p>

      <!-- CTAs — pill-shaped for playful feel -->
      <div
        class="animate-fade-in-up mt-10 flex flex-col items-start gap-4 sm:ml-12 sm:flex-row"
        style="animation-delay: 0.4s;"
      >
        <a
          href={contactHref}
          class="bg-gradient-primary text-primary-foreground hover:shadow-glow inline-flex h-12 w-full items-center justify-center gap-2 rounded-full px-8 text-base font-semibold transition-all hover:scale-[1.03] sm:w-auto"
        >
          {t.hero.cta}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
        <a
          href={servicesHref}
          class="border-border bg-background-elevated text-foreground hover:border-border-subtle inline-flex h-12 w-full items-center justify-center gap-2 rounded-full border px-8 text-base font-medium transition-all sm:w-auto"
        >
          {t.hero.secondaryCta}
        </a>
      </div>

      <!-- Trust indicators — playful colorful pills -->
      <div
        class="animate-fade-in-up mt-16 flex flex-wrap gap-3 sm:ml-12"
        style="animation-delay: 0.5s;"
      >
        <span
          class="bg-primary/10 text-foreground-muted rounded-full px-4 py-1.5 text-sm"
          >{t.hero.experience}</span
        >
        <span
          class="bg-secondary/10 text-foreground-muted rounded-full px-4 py-1.5 text-sm"
          >{t.hero.startupsScaleups}</span
        >
        <span
          class="bg-primary/10 text-foreground-muted rounded-full px-4 py-1.5 text-sm"
          >{t.hero.remoteFirst}</span
        >
      </div>
    </div>
  </div>

  <!-- Decorative elements — playful blobs and pixels -->
  <div class="pointer-events-none absolute inset-0 -z-10" aria-hidden="true">
    <!-- Gradient blob -->
    <div
      class="animate-pulse-glow from-primary/20 via-secondary/10 absolute -top-20 -right-20 h-96 w-96 rounded-full bg-gradient-to-br to-transparent blur-3xl"
    >
    </div>

    <!-- Pixel scatter particles -->
    <div
      class="animate-float bg-primary/30 absolute top-[15%] left-[8%] h-3 w-3 rounded-sm"
      style="animation-delay: 0s;"
    >
    </div>
    <div
      class="animate-float bg-secondary/20 absolute top-[25%] right-[12%] h-2 w-2 rounded-sm"
      style="animation-delay: 0.5s;"
    >
    </div>
    <div
      class="animate-float bg-primary/20 absolute bottom-[30%] left-[15%] h-4 w-4 rounded-sm"
      style="animation-delay: 1s;"
    >
    </div>
    <div
      class="animate-float bg-secondary/30 absolute right-[8%] bottom-[20%] h-2.5 w-2.5 rounded-sm"
      style="animation-delay: 1.5s;"
    >
    </div>
    <div
      class="animate-float bg-primary/15 absolute top-[60%] left-[5%] h-2 w-2 rounded-sm"
      style="animation-delay: 2s;"
    >
    </div>
    <div
      class="animate-float bg-secondary/15 absolute top-[10%] right-[30%] h-3 w-3 rounded-sm"
      style="animation-delay: 2.5s;"
    >
    </div>
  </div>
</section>
