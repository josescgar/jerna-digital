---
/**
 * V2: Bold Hero — High-Impact, Dramatic
 * Left-aligned split layout, oversized heading, diagonal gradient sweep
 */
import {
  getTranslations,
  defaultLanguage,
  type Language,
} from '@/i18n/translations';
import { getLocalizedPath } from '@/i18n/utils';

interface Props {
  lang?: Language;
}

const lang = Astro.props.lang ?? defaultLanguage;
const t = getTranslations(lang);

const contactHref = getLocalizedPath(lang, '/contact');
const servicesHref = getLocalizedPath(lang, '/services');
---

<section class="section relative overflow-hidden">
  <div class="relative z-10 container">
    <div class="grid items-center gap-12 lg:grid-cols-2 lg:gap-16">
      <!-- Text side — left aligned -->
      <div class="max-w-2xl">
        <!-- Status badge -->
        <div
          class="animate-fade-in-up border-border-accent mb-6 inline-flex items-center gap-2 rounded-full border px-4 py-2"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="bg-primary absolute inline-flex h-full w-full animate-ping rounded-full opacity-75"
            ></span>
            <span class="bg-primary relative inline-flex h-2 w-2 rounded-full"
            ></span>
          </span>
          <span class="text-foreground-muted text-sm"
            >{t.hero.availableForProjects}</span
          >
        </div>

        <!-- Oversized heading -->
        <h1
          class="animate-fade-in-up text-5xl leading-none font-extrabold tracking-tighter sm:text-6xl md:text-7xl lg:text-8xl"
          style="animation-delay: 0.1s;"
        >
          <span class="text-foreground">{t.hero.greeting}</span>
          <br />
          <span class="text-gradient">{t.hero.name}</span>
        </h1>

        <!-- Subtitle -->
        <p
          class="animate-fade-in-up text-foreground-muted mt-6 max-w-lg text-lg sm:text-xl"
          style="animation-delay: 0.2s;"
        >
          {t.hero.title}
        </p>

        <!-- CTAs — bold gradient buttons -->
        <div
          class="animate-fade-in-up mt-10 flex flex-col gap-4 sm:flex-row"
          style="animation-delay: 0.3s;"
        >
          <a
            href={contactHref}
            class="bg-gradient-primary text-primary-foreground hover:shadow-glow-lg inline-flex h-14 items-center justify-center gap-2 rounded-lg px-10 text-lg font-bold transition-all hover:scale-[1.03]"
          >
            {t.hero.cta}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </a>
          <a
            href={servicesHref}
            class="border-border bg-background-elevated text-foreground hover:border-border-subtle inline-flex h-14 items-center justify-center gap-2 rounded-lg border px-10 text-lg font-semibold transition-all"
          >
            {t.hero.secondaryCta}
          </a>
        </div>

        <!-- Trust indicators -->
        <div
          class="animate-fade-in-up text-foreground-subtle mt-12 flex flex-wrap gap-6 text-sm"
          style="animation-delay: 0.4s;"
        >
          <div class="flex items-center gap-2">
            <span class="bg-primary h-1.5 w-1.5 rounded-full"></span>
            <span>{t.hero.experience}</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="bg-primary h-1.5 w-1.5 rounded-full"></span>
            <span>{t.hero.startupsScaleups}</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="bg-primary h-1.5 w-1.5 rounded-full"></span>
            <span>{t.hero.remoteFirst}</span>
          </div>
        </div>
      </div>

      <!-- Visual side — diagonal gradient sweep -->
      <div class="relative hidden lg:block" aria-hidden="true">
        <div
          class="from-accent-orange/20 via-accent-coral/10 aspect-square w-full rounded-3xl bg-gradient-to-br to-transparent"
          style="transform: rotate(-6deg) scale(1.1);"
        >
          <div
            class="from-primary/10 absolute inset-8 rounded-2xl bg-gradient-to-tl to-transparent"
          >
          </div>
          <div
            class="border-primary/20 absolute inset-16 rounded-xl border-2 border-dashed"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
